<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg"
        tools:context=".activity.LoginActivityActivity">


        <ImageView
            android:id="@+id/heart1"
            android:layout_width="69dp"
            android:layout_height="61dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/heart"
            app:tint="#FF4081" />

        <ImageView
            android:id="@+id/heart5"
            android:layout_width="91dp"
            android:layout_height="67dp"
            android:layout_alignBottom="@+id/cardView"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="-18dp"
            android:layout_marginBottom="-4dp"
            android:src="@drawable/heart"
            app:tint="#FF4081" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_below="@+id/heart1"
            android:layout_alignBottom="@+id/hexagonal_grid"
            android:layout_marginTop="126dp"
            android:layout_marginBottom="45dp"
            android:paddingEnd="@dimen/_30sdp"
            android:rotationX="-12"
            android:rotationY="7"
            android:src="@drawable/halfheart"
            app:tint="#FF4081" />

        <ImageView
            android:id="@+id/heart11"
            android:layout_width="69dp"
            android:layout_height="61dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="1dp"
            android:src="@drawable/heart"
            app:tint="#FF4081" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="@dimen/_20sdp">

            <ImageView
                android:id="@+id/hexagonal_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:src="@drawable/ds_logo" />
        </androidx.cardview.widget.CardView>


        <ImageView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout2"
            android:layout_below="@+id/hexagonal_grid"
            android:layout_marginTop="81dp"
            android:layout_marginBottom="-1dp"
            android:src="@drawable/rectangle_stroke" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="244dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24dp"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/quick_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:background="@drawable/button_background_google"
                android:text="Anonymous Login"
                android:textColor="#7E7A7A"
                android:textSize="20dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnGoogleLogin"
                android:background="@drawable/bg_button_gradient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="Login with Google"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnphoneLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:background="@drawable/button_background_google"
                android:text="Phone Login"
                android:textColor="#7E7A7A"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <include layout="@layout/layout_no_internet" />

    </RelativeLayout>

</layout>