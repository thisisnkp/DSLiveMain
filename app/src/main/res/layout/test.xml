<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="#E6E6E6">

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@color/black" />

    <View
        android:id="@+id/dark_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <EditText
        android:id="@+id/name_your_stream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        android:inputType="textVisiblePassword"
        android:text="Name your stream"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_toEndOf="@+id/name_your_stream"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:paddingEnd="10dp"
      android:gravity="end"
      android:orientation="horizontal">
      <ImageView
          android:id="@+id/btnSwitchCamaraFunction"
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:src="@drawable/cameraflip"/>

      <View
          android:layout_width="20dp"
          android:layout_height="0dp"/>

      <ImageView
          android:id="@+id/btnMute"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:src="@drawable/unmute" />
      <View
          android:layout_width="20dp"
          android:layout_height="0dp"/>
      <ImageView
          android:id="@+id/btnClose"
          android:layout_width="25dp"
          android:layout_height="25dp"
          app:tint="@color/white"
          android:src="@drawable/cancel"/>






  </LinearLayout>

    <LinearLayout
        android:id="@+id/stream_tags_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_your_stream"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stream Tags:"
            android:fontFamily="@font/jannltbold"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Select"
            android:fontFamily="@font/jannltbold"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/resolution_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stream_tags_container"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/high_resolution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High Resolution"
            android:fontFamily="@font/jannltbold"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:buttonTint="#FFFFFF" />

        <RadioButton
            android:id="@+id/standard_definition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/jannltbold"
            android:text="Standard Definition"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:buttonTint="#FFFFFF" />
    </RadioGroup>


    <ImageView
        android:id="@+id/btnGifIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stream_options_container"
        android:layout_centerInParent="true"
        android:layout_toStartOf="@+id/btnPk"
        android:padding="10dp"
        android:src="@drawable/magic" />


    <ImageView
        android:id="@+id/btnFilter"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_above="@+id/stream_options_container"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/btnPk"
        android:padding="10dp"
        android:src="@drawable/filtericon" />


    <TextView
        android:id="@+id/btnPk"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
      android:layout_above="@+id/stream_options_container"
        android:background="@drawable/button_background"
        android:text="Go Live"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:fontFamily="@font/jannltbold"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/stream_options_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video Stream"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/jannltbold"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Live Party"
            android:fontFamily="@font/jannltbold"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Audio Stream"
            android:fontFamily="@font/jannltbold"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>
